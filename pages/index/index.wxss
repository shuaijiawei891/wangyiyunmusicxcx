/* 可以复用的样式 */
.title_wrap{
  padding: 30rpx 0;
}
.title_wrap text{
  padding-left: 20rpx;
  border-left: 3px solid red;
}
.ov{
  overflow:hidden;
}

/* 可以复用的样式结束 */


.nav_wrap{
  position: fixed;
  width: 100%;
  display: flex;
  border-bottom: 1px solid #ccc;
  background-color: white;
  z-index: 9999;
}
.nav_wrap view{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  height: 62rpx;
}
.nav_wrap text{
  padding: 16rpx;
}
/* 点谁, 谁设置active */
.nav_wrap .active{
  border-bottom: 2px solid red;
  color: red;
}


.content_wrap{
  /* 我们需要给上边预留出来一点空间, 因为上面还有一个顶部导航 */
  padding-top: 70rpx;
  background-color: #fcfcfd;
}
.rec_item{
  width: 244rpx;
  height: 340rpx;
  position: relative;
  float: left;
  margin-right: 9rpx;
}
.rec_item:nth-of-type(3n){
  margin-right: 0;
}
.rec_item image{
  width: 100%;
  height: 70%;
}
.rec_item text{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: white;
}
.song_name{
  font-size: 26rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}



/* 第二个页面相关的样式 */
.hot_song_wrap{
  background-image: url("http://s3.music.126.net/mobile-new/img/hot_music_bg_2x.jpg?f01a252389c26bcf016816242eaa6aee=");
  background-size: cover;
  width: 100%;
  padding: 40rpx;
}
.hot_song_wrap .title{
  background: url(http://s3.music.126.net/mobile-new/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880=) no-repeat;
  background-size: 166px 97px;
  width: 142px;
  height: 67px;
  background-position: -24px -30px;
}
.hot_song_wrap .time{
  font-size: 24rpx;
  margin-top: 20rpx;
  color: hsla(0,0%,100%,.8);
}

/* 第三个页面相关的样式 */
.three_page{
  background-color: #fcfcfd;
}
.search_back{
  padding: 20rpx;
  border-bottom: 1px solid rgb(241, 240, 240);
}
.search_wrap{
  background-color: #ebecec;
  border-radius: 40rpx;
  height: 60rpx;
  padding-left: 20rpx;
}
.search_wrap text{
  font-size: 26rpx;
  color: lightgray;
  vertical-align: middle;
  display: inline-block;
  transform: translate(0, 4rpx);
  margin-right: 30rpx;
}
.search_wrap input{
  vertical-align: middle;
  display: inline-block;
  height: 60rpx;
  font-size: 28rpx;
}

/* 热门搜索 */
.hot_search_wrap{
  padding: 40rpx 20rpx 40rpx 20rpx;
}
.hot_search_wrap .title{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.hot_search_text{
  font-size: 28rpx;
  padding: 10rpx 25rpx;
  border-radius: 64rpx;
  border: 1px solid #ccc;
  float: left;
  margin: 0 20rpx 20rpx 0;
}


.text_search_wrap view{
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #ccc;
}
.confirm_title_wrap{
  color: rgb(0, 153, 255);
}
.text_item text:first-of-type{
  margin-right: 30rpx;
}