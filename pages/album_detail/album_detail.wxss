.top_back_wrap{
  width: 100%;
  height: 420rpx;
  background-size: cover;
  background-position: center center;
}
.black_mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
  padding: 90rpx 20rpx 20rpx 20rpx;
}
.album_name{
  font-size: 36rpx;
  color: white;
}
.update_time{
  font-size: 24rpx;
  color: #FFFFFF99;
  background-color: #FFFFFF33;
  display: inline-block;
  margin-top: 20rpx;
}
.info{
  font-size: 28rpx;
  color: #FFFFFFCC;
  margin-top: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info_bottom{
  overflow: hidden;
}
.info_bottom text:last-of-type{
  float: right;
}

.song_list_title{
  font-size: 24rpx;
  background-color: lightgray;
  color: gray;
  padding: 10rpx 20rpx;
}

/* 歌曲列表的样式 */
.ov{
  overflow: hidden;
}
.news_song_item{
  margin-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 1px solid #ccc;
}
.song_info_wrap{
  float: left;
  width: 646rpx;
}
.play_icon{
  font-size: 44rpx;
  float: right;
  margin-top: 20rpx;
}
.song_info_wrap .song_name{
  font-size: 34rpx;
  color: #333;
}
.song_info{
  font-size: 24rpx;
  color: #888;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.song_info text{
  vertical-align: middle;
  margin: 0 5rpx;
}
.song_info text:nth-of-type(1){
  background-color: rgb(248, 221, 172);
  color: red;
  font-size: 20rpx;
  margin-right: 10rpx;
  display: inline-block;
  transform: scale(1, 0.7);
}
.song_name{
  font-size: 28rpx;
  color: #FFFFFFCC;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}



